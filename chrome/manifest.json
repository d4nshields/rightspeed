{
  "manifest_version": 2,

  "name": "YouTube™ RightSpeed",
  "short_name": "YTRightSpeed",
  "description": "Slower or faster, watch Youtube videos at exactly the 'right speed'.",
  "version": "0.0.0.5",

  "icons": {
      "128": "stopwatch-small-128.png"
  },
  "content_scripts": [{
      "matches": ["*://*.youtube.com/*"],
      "js": ["jquery.min.js", "jquery-ui.js", "myscript.js"],
      "run_at": "document_end"
  }],
  "browser_action": {
    "default_icon": {
      "19": "stopwatch-small-128.png",
      "38": "stopwatch-small-128.png"
    },
    "default_title": "YouTube™ RightSpeed",
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs"
  ],
  "web_accessible_resources": [
      "jquery-ui.css", "spdr-styles.css", "jquery.min.js", "jquery-ui.js", "myscript.js", "commLink.js", "stopwatch-top.png"
      ],
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'"
}
