{
  "manifest_version": 2,

  "name": "RightSpeed Unstable for YouTube",
  "short_name": "rightspdXXX",
  "description": "Unstable version of RightSpeed for YouTube.",
  "version": "0.0.2.9",

  "icons": {
      "16": "stopwatch-small-128.png",
      "19": "stopwatch-small-128.png",
      "48": "stopwatch-small-128.png",
      "128": "stopwatch-small-128.png"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [{
      "matches": ["*://*.youtube.com/*"],
      "js": ["jquery-1.11.0.min.js", "jquery-ui.js", "ga-config.js", "ga.js", "myscript.js"],
      "run_at": "document_end",
      "all_frames": true
  }],
  "browser_action": {
    "default_icon": {
      "16": "stopwatch-small-128.png",
      "19": "stopwatch-small-128.png",
      "48": "stopwatch-small-128.png",
      "128": "stopwatch-small-128.png"
    },
    "default_title": " RightSpeed for YouTube",
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs", 
    "storage", 
    "cookies", 
    "*://*.youtube.com/*"
  ],
  "web_accessible_resources": [
      "BTTF.ttf", "stop-watch-icon.png",
      "jquery-ui.css", "spdr-styles.css", "jquery.min.js", "jquery-ui.js", "myscript.js", "commLink.js", 
      "stopwatch-top.png", "button_instant_replay.png",
      "images/*"
      ],
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'"
}
