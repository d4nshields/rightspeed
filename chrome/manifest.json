{
  "manifest_version": 2,

  "name": "RightSpeed for YouTube",
  "short_name": "rightspeed",
  "description": "Slower or faster, watch Youtube videos at exactly the 'right speed'.",
  "version": "0.0.0.29",

  "icons": {
      "128": "stopwatch-small-128.png"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [{
      "matches": ["*://*.youtube.com/*"],
      "js": ["jquery-1.11.0.min.js", "jquery-ui.js", "ga-config.js", "ga.js", "myscript.js"],
      "run_at": "document_end",
      "all_frames": true
  }],
  "browser_action": {
    "default_icon": {
      "19": "stopwatch-small-128.png",
      "38": "stopwatch-small-128.png"
    },
    "default_title": " RightSpeed for YouTube",
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs", "storage", "cookies", "*://*.youtube.com/*"
  ],
  "web_accessible_resources": [
      "jquery-ui.css", "spdr-styles.css", "jquery.min.js", "jquery-ui.js", "myscript.js", "commLink.js", "stopwatch-top.png",
      "images/*"
      ],
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'"
}
